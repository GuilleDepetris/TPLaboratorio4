@model TrabajoFinal_Laboratorio4.ViewsModels.TicketDetallesViewModel

<link href="~/css/afiliados.css" rel="stylesheet" />

@{
    ViewData["Title"] = "Index";
}

<h1>Detalles de Tickets</h1>

<div class="divAgregarDet">
    <a asp-action="Create" class="btnAgregarDet">Agregar Detalle</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                <p>Detalle</p>
            </th>
            <th>
                <p>Estado</p>
            </th>
            <th>
                <p>Fecha de Creación</p>
            </th>
            <th>
                <p>Ticket</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TicketDetalles)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descripcionPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaEstado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ticket.observacion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<!-- Controles de paginación -->
<div class="pagination">
    @if (Model.TamanoPagina > 1)
    {
        for (int i = 1; i <= Model.TamanoPagina; i++)
        {
            <a asp-action="Index" asp-route-paginaActual="@i"
               class="@(Model.PaginaActual == i ? "active" : "")">@i</a>
        }
    }
</div>