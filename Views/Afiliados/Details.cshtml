@model TrabajoFinal_Laboratorio4.Models.Afiliado
<link href="~/css/createAndEdit.css" rel="stylesheet" />

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div class="containerGeneral">
    <h4>Afiliado</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <p>Nombre</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombres)
        </dd>
        <dt class = "col-sm-2">
            <p>Apellido</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.apellido)
        </dd>
        <dt class = "col-sm-2">
            <p>DNI</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dni)
        </dd>
        <dt class = "col-sm-2" >
            <p>Fecha de Nacimiento</p>
        </dt>
        <dd class = "col-sm-10">
            @Model.fechaNacimiento.ToString("dd/MM/yyyy")
        </dd>
    </dl>
        <div class="containerFoto">
            @if (!String.IsNullOrEmpty(@Model.foto))
            {
                <img src="~/imagenes/afiliados/@Model.foto" asp-append-version="true"
                 style="position: absolute; top: 280px; right: 420px;width: 160px; height:160px; object-fit:cover" />
            }
        </div>
</div>
<div>
    <a asp-action="Index">Volver a la lista</a> |
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js">
</script>
<script src="~/js//preview.js"></script>
