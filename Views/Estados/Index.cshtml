@model TrabajoFinal_Laboratorio4.ViewsModels.EstadosViewModel

<link href="~/css/afiliados.css" rel="stylesheet" />


@{
    ViewData["Title"] = "Index";
}

<h1>Estados</h1>

<div class="divCreateEs">
    <a asp-action="Create" class="btnCrearEs">Crear Estado</a>
</div>

<table class="table">
    <thead>
        <tr class="trEstados">
            <th>
                <p class="titulo-descripcion">Descripción</p>
            </th>
            <th>
                <p style="color:black; margin-top: 0px"> Opciones </p>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Estados) {
        <tr >
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<!-- Controles de paginación -->
<div class="pagination">
    @if (Model.TotalEstados > Model.TamanoPagina) 
    {
        for (int i = 1; i <= (Model.TotalEstados + Model.TamanoPagina - 1) / Model.TamanoPagina; i++)// Calcula el total de páginas
        {
            <a asp-action="Index" asp-route-paginaActual="@i">@i</a>
            @if (i < (Model.TotalEstados + Model.TamanoPagina - 1) / Model.TamanoPagina)
            {
                <span>  </span>
            }
        }
    }
</div>
